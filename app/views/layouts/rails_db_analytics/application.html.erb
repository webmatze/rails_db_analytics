<!DOCTYPE html>
<html>
<head>
  <title>Database Analytics</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "rails_db_analytics/application.tailwind", media: "all" %>
  <%= rails_db_analytics_importmap_tags %>
</head>
<body class="bg-gray-100" data-controller="analytics" data-analytics-modal-outlet="#new-report-modal">
  <div class="min-h-screen">
    <nav class="bg-white shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex">
            <div class="flex-shrink-0 flex items-center">
              <%= link_to 'Database Analytics', root_path, class: 'text-xl font-bold text-gray-800' %>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <% if notice %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
          <span class="block sm:inline"><%= notice %></span>
        </div>
      <% end %>

      <% if alert %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
          <span class="block sm:inline"><%= alert %></span>
        </div>
      <% end %>

      <%= yield %>
    </main>
  </div>
</body>
</html>
